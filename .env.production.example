# =============================================================================
# Frontend - Production Environment
# =============================================================================
# Used during Docker build. Pass as build args:
# docker build --build-arg VITE_API_URL=https://api.example.com .
# =============================================================================

# API Configuration
VITE_API_URL=https://resume-builder-backend-xxx.run.app
VITE_API_VERSION=v1
VITE_NODE_ENV=production

# Feature Flags
VITE_ENABLE_API_LOGS=false
VITE_ENABLE_HEALTH_CHECK=true
VITE_ENABLE_AUTO_SAVE=true

# PDF Settings
VITE_DEFAULT_PDF_NAME=resume.pdf
VITE_PDF_TIMEOUT=30000

# Debug (disable in production)
VITE_DEBUG_MODE=false
