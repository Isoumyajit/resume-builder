# Resume Builder Frontend Configuration

# API Configuration
VITE_API_URL=http://localhost:3001
VITE_API_VERSION=v1

# Development Settings
VITE_NODE_ENV=development
VITE_ENABLE_API_LOGS=true

# Feature Flags
VITE_ENABLE_HEALTH_CHECK=true
VITE_ENABLE_TEMPLATES=false
VITE_ENABLE_AUTO_SAVE=true

# PDF Settings
VITE_DEFAULT_PDF_NAME=resume.pdf
VITE_PDF_TIMEOUT=30000

# Debug Settings
VITE_DEBUG_MODE=false
VITE_SHOW_FORM_DEV_TOOLS=false

# Firebase Configuration
# Get these values from your Firebase Console -> Project Settings
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id